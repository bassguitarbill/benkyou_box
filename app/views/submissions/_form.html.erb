<button id="generate_button">Generate Prompt</button>

<%= form_with(model: submission) do |form| %>
  <% if submission.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
        <% submission.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :prompt, style: "display: block" %>
    <%= form.text_area :prompt %>
  </div>

  <div>
    <%= form.label :response, style: "display: block" %>
    <%= form.text_area :response %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= javascript_pack_tag 'submissions' %>
